<form action="/figures" method="post">

  <h1>Figure:<h1><input type = "text" name = "figure[name]"><br>
  <h2>New landmark:<h2><input type = "text" name = "landmark[name]"><br>
  <h2>New title:<h2><input type = 'text' name = "title[name]"><br>
  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type = 'checkbox' name = 'figure[landmark_ids][]' value = '<%= landmark.id%>'>
    <br>
  <%end%>
  <h3>Titles</h3>
  <% @titles.each do |title| %>
  <label><%= title.name %></label>
  <input type = 'checkbox' name = 'figure[title_ids][]' value = '<%= title.id%>'>
  <br>
  <%end%>
  <input type = "submit" value = "submit">

</form>
